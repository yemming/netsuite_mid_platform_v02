{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "name": "NetSuite Next Theme",
  "version": "1.0.0",
  "description": "NetSuite Next UI 設計系統配置檔",
  "author": "NetSuite Platform V2 Team",
  "lastUpdated": "2025-01-XX",
  
  "colors": {
    "primary": {
      "50": "hsl(203, 60%, 95%)",
      "100": "hsl(203, 60%, 85%)",
      "200": "hsl(203, 60%, 75%)",
      "300": "hsl(203, 60%, 65%)",
      "400": "hsl(203, 60%, 55%)",
      "500": "hsl(203, 60%, 45%)",
      "600": "hsl(203, 60%, 35%)",
      "700": "hsl(203, 60%, 25%)",
      "800": "hsl(203, 60%, 20%)",
      "900": "hsl(203, 60%, 15%)",
      "DEFAULT": "hsl(203, 60%, 45%)",
      "foreground": "hsl(0, 0%, 100%)"
    },
    "secondary": {
      "DEFAULT": "hsl(0, 0%, 96%)",
      "foreground": "hsl(0, 0%, 13%)"
    },
    "accent": {
      "DEFAULT": "hsl(0, 0%, 96%)",
      "foreground": "hsl(0, 0%, 13%)"
    },
    "destructive": {
      "DEFAULT": "hsl(0, 84%, 60%)",
      "foreground": "hsl(0, 0%, 100%)"
    },
    "muted": {
      "DEFAULT": "hsl(0, 0%, 96%)",
      "foreground": "hsl(0, 0%, 40%)"
    },
    "semantic": {
      "success": {
        "DEFAULT": "hsl(142, 71%, 45%)",
        "foreground": "hsl(0, 0%, 100%)"
      },
      "warning": {
        "DEFAULT": "hsl(38, 92%, 50%)",
        "foreground": "hsl(0, 0%, 13%)"
      },
      "error": {
        "DEFAULT": "hsl(0, 84%, 60%)",
        "foreground": "hsl(0, 0%, 100%)"
      },
      "info": {
        "DEFAULT": "hsl(203, 60%, 45%)",
        "foreground": "hsl(0, 0%, 100%)"
      }
    },
    "neutral": {
      "light": {
        "background": "hsl(0, 0%, 100%)",
        "foreground": "hsl(0, 0%, 13%)",
        "muted": "hsl(0, 0%, 96%)",
        "mutedForeground": "hsl(0, 0%, 40%)",
        "border": "hsl(0, 0%, 91%)",
        "input": "hsl(0, 0%, 91%)",
        "card": "hsl(0, 0%, 100%)",
        "cardForeground": "hsl(0, 0%, 13%)",
        "popover": "hsl(0, 0%, 100%)",
        "popoverForeground": "hsl(0, 0%, 13%)"
      },
      "dark": {
        "background": "hsl(203, 22%, 20%)",
        "foreground": "hsl(0, 0%, 100%)",
        "muted": "hsl(203, 18%, 28%)",
        "mutedForeground": "hsl(0, 0%, 70%)",
        "border": "hsl(203, 18%, 28%)",
        "input": "hsl(203, 18%, 28%)",
        "card": "hsl(203, 22%, 23%)",
        "cardForeground": "hsl(0, 0%, 100%)",
        "popover": "hsl(203, 22%, 20%)",
        "popoverForeground": "hsl(0, 0%, 100%)"
      }
    }
  },
  
  "typography": {
    "fontFamily": {
      "sans": [
        "system-ui",
        "-apple-system",
        "BlinkMacSystemFont",
        "'Segoe UI'",
        "sans-serif"
      ],
      "mono": [
        "'Courier New'",
        "Courier",
        "monospace"
      ]
    },
    "fontSize": {
      "xs": {
        "size": "0.75rem",
        "lineHeight": "1.125rem"
      },
      "sm": {
        "size": "0.875rem",
        "lineHeight": "1.25rem"
      },
      "base": {
        "size": "0.875rem",
        "lineHeight": "1.4rem"
      },
      "lg": {
        "size": "1rem",
        "lineHeight": "1.5rem"
      },
      "xl": {
        "size": "1.125rem",
        "lineHeight": "1.75rem"
      },
      "2xl": {
        "size": "1.25rem",
        "lineHeight": "1.875rem"
      },
      "3xl": {
        "size": "1.5rem",
        "lineHeight": "2rem"
      },
      "4xl": {
        "size": "1.875rem",
        "lineHeight": "2.25rem"
      }
    },
    "fontWeight": {
      "light": 300,
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "lineHeight": {
      "tight": 1.25,
      "normal": 1.5,
      "relaxed": 1.6,
      "loose": 1.75
    }
  },
  
  "spacing": {
    "unit": 4,
    "scale": {
      "0": "0px",
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem",
      "16": "4rem",
      "20": "5rem",
      "24": "6rem"
    }
  },
  
  "borderRadius": {
    "none": "0",
    "sm": "0.25rem",
    "md": "0.375rem",
    "lg": "0.5rem",
    "xl": "0.75rem",
    "2xl": "1rem",
    "full": "9999px",
    "DEFAULT": "0.375rem"
  },
  
  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "default": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
    "dark": {
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.3)",
      "default": "0 1px 3px 0 rgba(0, 0, 0, 0.3), 0 1px 2px 0 rgba(0, 0, 0, 0.2)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.3), 0 2px 4px -1px rgba(0, 0, 0, 0.2)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.3), 0 4px 6px -2px rgba(0, 0, 0, 0.2)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.3), 0 10px 10px -5px rgba(0, 0, 0, 0.2)"
    }
  },
  
  "components": {
    "button": {
      "height": {
        "sm": "2.25rem",
        "md": "2.5rem",
        "lg": "2.75rem",
        "icon": "2.5rem"
      },
      "padding": {
        "x": {
          "sm": "0.75rem",
          "md": "1rem",
          "lg": "2rem"
        },
        "y": {
          "sm": "0.5rem",
          "md": "0.5rem",
          "lg": "0.625rem"
        }
      },
      "borderRadius": "0.375rem",
      "fontSize": "0.875rem",
      "fontWeight": 500,
      "variants": {
        "primary": {
          "background": "hsl(203, 60%, 45%)",
          "foreground": "hsl(0, 0%, 100%)",
          "hover": "hsl(203, 60%, 40%)"
        },
        "secondary": {
          "background": "hsl(0, 0%, 96%)",
          "foreground": "hsl(0, 0%, 13%)",
          "hover": "hsl(0, 0%, 90%)"
        },
        "outline": {
          "background": "transparent",
          "foreground": "hsl(203, 60%, 45%)",
          "border": "hsl(0, 0%, 91%)",
          "hover": "hsl(0, 0%, 96%)"
        },
        "ghost": {
          "background": "transparent",
          "foreground": "hsl(0, 0%, 13%)",
          "hover": "hsl(0, 0%, 96%)"
        },
        "destructive": {
          "background": "hsl(0, 84%, 60%)",
          "foreground": "hsl(0, 0%, 100%)",
          "hover": "hsl(0, 84%, 55%)"
        }
      }
    },
    "input": {
      "height": "2.5rem",
      "padding": {
        "x": "0.75rem",
        "y": "0.625rem"
      },
      "borderRadius": "0.375rem",
      "borderWidth": "1px",
      "borderColor": "hsl(0, 0%, 91%)",
      "fontSize": "0.875rem",
      "focus": {
        "borderColor": "hsl(203, 60%, 45%)",
        "borderWidth": "2px",
        "outline": "none"
      },
      "error": {
        "borderColor": "hsl(0, 84%, 60%)"
      },
      "disabled": {
        "opacity": 0.5,
        "backgroundColor": "hsl(0, 0%, 96%)"
      }
    },
    "card": {
      "padding": "1.5rem",
      "borderRadius": "0.375rem",
      "borderWidth": "1px",
      "borderColor": "hsl(0, 0%, 91%)",
      "backgroundColor": "hsl(0, 0%, 100%)",
      "shadow": "default",
      "dark": {
        "backgroundColor": "hsl(203, 22%, 23%)",
        "borderColor": "hsl(203, 18%, 28%)"
      }
    },
    "table": {
      "rowHeight": "3rem",
      "padding": {
        "x": "1rem",
        "y": "0.75rem"
      },
      "borderColor": "hsl(0, 0%, 91%)",
      "header": {
        "backgroundColor": "hsl(0, 0%, 96%)",
        "fontWeight": 600,
        "fontSize": "0.875rem"
      },
      "hover": {
        "backgroundColor": "hsl(0, 0%, 98%)"
      },
      "selected": {
        "backgroundColor": "hsl(203, 60%, 95%)"
      },
      "dark": {
        "header": {
          "backgroundColor": "hsl(203, 18%, 28%)"
        },
        "hover": {
          "backgroundColor": "hsl(203, 22%, 25%)"
        },
        "selected": {
          "backgroundColor": "hsl(203, 60%, 30%)"
        }
      }
    }
  },
  
  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  },
  
  "animations": {
    "duration": {
      "fast": "150ms",
      "normal": "200ms",
      "slow": "300ms"
    },
    "easing": {
      "easeIn": "cubic-bezier(0.4, 0, 1, 1)",
      "easeOut": "cubic-bezier(0, 0, 0.2, 1)",
      "easeInOut": "cubic-bezier(0.4, 0, 0.2, 1)"
    }
  },
  
  "zIndex": {
    "base": 0,
    "dropdown": 1000,
    "sticky": 1020,
    "fixed": 1030,
    "modalBackdrop": 1040,
    "modal": 1050,
    "popover": 1060,
    "tooltip": 1070
  }
}

